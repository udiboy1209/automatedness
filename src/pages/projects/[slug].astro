---
import { getCollection } from 'astro:content';

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// 1. Generate a path for every entry in the collection
export async function getStaticPaths() {
    const projectEntries = await getCollection('projects', (p) => p.data.link === undefined);
    return projectEntries.map(entry => ({
        params: { slug: entry.slug }, props: { entry },
    }));
}

// 2. Get the entry from props
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
    <div class="w-full px-4 lg:w-3/4 lg:mx-auto">
        <Header />
        <div class="w-full max-w-none prose prose-slate my-8">
            <h2 class="mb-1">{entry.data.title}</h2>
            <h4>{entry.data.date.toDateString()}</h4>
            <Content />
        </div>
        <Footer />
    </div>
</Layout>
